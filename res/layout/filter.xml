<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/llTopBar"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@color/vreal_orange"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rlHome"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/rlToogle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingRight="@dimen/padding10" >

                <RelativeLayout
                    android:id="@+id/rlTooggle"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="@dimen/padding5" >

                    <ImageView
                        android:id="@+id/imgTooggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_tongo" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Vreal.vn"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold"
                android:visibility="visible" />

            <RelativeLayout
                android:id="@+id/rlFilter"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding5"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/imgFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_filter" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlRefresh"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/padding5"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/imgRefresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_re_fresh" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlMap"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="@dimen/padding10"
                android:layout_toLeftOf="@+id/rlFilter"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/imgLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/ic_location" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pdBar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding10"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/rlKhuvuc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@drawable/ed_loainhadat"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tvLa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Khu vực"
                android:textSize="@dimen/textsize_medium" />

            <TextView
                android:id="@+id/tvKhuvuc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgLa"
                android:layout_toRightOf="@+id/tvLa"
                android:gravity="right"
                android:paddingRight="@dimen/padding5"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgLa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_muitenden_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlMuagia"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@drawable/ed_loainhadat"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tvMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Mức giá"
                android:textSize="@dimen/textsize_medium" />

            <TextView
                android:id="@+id/tvMucgia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgLaa"
                android:layout_toRightOf="@+id/tvMG"
                android:gravity="right"
                android:paddingRight="@dimen/padding5"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgLaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_muitenden_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlLoai"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@drawable/ed_loainhadat"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tvL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Loại nhà đất"
                android:textSize="@dimen/textsize_medium" />

            <TextView
                android:id="@+id/tvLoai"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgL"
                android:layout_toRightOf="@+id/tvL"
                android:gravity="right"
                android:paddingRight="@dimen/padding5"
                android:text=""
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_muitenden_right" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlNam"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@drawable/ed_loainhadat"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tvN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Năm xây dựng"
                android:textSize="@dimen/textsize_medium" />

            <TextView
                android:id="@+id/tvNam"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgNL"
                android:layout_toRightOf="@+id/tvN"
                android:gravity="right"
                android:paddingRight="@dimen/padding5"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgNL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_muitenden_right" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnTimkiem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding15"
            android:background="@color/vreal_orange"
            android:padding="@dimen/padding10"
            android:text="LỌC"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>