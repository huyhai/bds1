<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pdBar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding10"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@drawable/ed_loainhadat"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tvLa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Khu vực"
                android:textSize="@dimen/textsize_medium" />

            <TextView
                android:id="@+id/tvKhuvuc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgLa"
                android:layout_toRightOf="@+id/tvLa"
                android:gravity="right"
                android:paddingRight="@dimen/padding5"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgLa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_muitenden_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@drawable/ed_loainhadat"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tvMG"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Mức giá"
                android:textSize="@dimen/textsize_medium" />

            <TextView
                android:id="@+id/tvMucgia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgLaa"
                android:layout_toRightOf="@+id/tvMG"
                android:gravity="right"
                android:paddingRight="@dimen/padding5"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgLaa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_muitenden_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@drawable/ed_loainhadat"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tvL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Loại nhà đất"
                android:textSize="@dimen/textsize_medium" />

            <TextView
                android:id="@+id/tvLoai"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgL"
                android:layout_toRightOf="@+id/tvL"
                android:gravity="right"
                android:paddingRight="@dimen/padding5"
                android:text="Căn hộ chung cơ cao cấp"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_muitenden_right" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding5"
            android:background="@drawable/ed_loainhadat"
            android:padding="@dimen/padding5" >

            <TextView
                android:id="@+id/tvN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Năm xây dựng"
                android:textSize="@dimen/textsize_medium" />

            <TextView
                android:id="@+id/tvNam"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgNL"
                android:layout_toRightOf="@+id/tvN"
                android:gravity="right"
                android:paddingRight="@dimen/padding5"
                android:textSize="@dimen/textsize_medium"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgNL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_muitenden_right" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>