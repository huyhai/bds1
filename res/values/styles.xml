<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicator</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="foodRatingBar" parent="@android:attr/ratingBarStyleSmall">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">@dimen/w_rating_min</item>
        <item name="android:maxHeight">@dimen/w_rating_max</item>
    </style>

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:indeterminateDrawable">@drawable/custom_ratingbar</item>
    </style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="CalendarCard"></style>

    <style name="CalendarCard.Root"></style>

    <style name="CalendarCard.Title" />

    <style name="CalendarCard.Day">
        <item name="android:paddingBottom">@dimen/padding5</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalendarCard.Days">
        <item name="android:padding">0dp</item>
    </style>

    <style name="CalendarCard.Grid">
        <item name="android:background">@drawable/card_grid_bg</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="CalendarCard.Cell">
        <item name="android:background">@drawable/card_item_bg</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="android:background">@drawable/icon_face</item>
    </style>

    <style name="Theme.PageIndicatorDefaults" parent="android:Theme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
    </style>

    <style name="Widget"></style>

